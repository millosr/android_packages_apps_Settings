<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/urom_dialog_padding"
    android:paddingEnd="@dimen/urom_dialog_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/urom_math_zero"
        android:id="@+id/generic_value"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/urom_math_more"
        android:id="@+id/generic_button_more"
        android:layout_below="@+id/generic_value"
        android:layout_alignParentRight="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/urom_math_less"
        android:id="@+id/generic_button_less"
        android:layout_alignTop="@+id/generic_button_more"
        android:layout_alignParentLeft="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generic_seekbar"
        android:layout_alignTop="@+id/generic_button_less"
        android:layout_toRightOf="@+id/generic_button_less"
        android:layout_alignBottom="@+id/generic_button_less"
        android:layout_toLeftOf="@+id/generic_button_more"
        android:max="100"
        android:progress="1"
        android:indeterminate="false" />
</RelativeLayout>
