<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/urom_dialog_padding"
    android:paddingEnd="@dimen/urom_dialog_padding"
    android:paddingTop="@dimen/urom_dialog_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/urom_dialog_headlist_padding"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textColor="?android:attr/colorAccent"
        android:text="@string/status_bar_battery_style_title"
        android:id="@+id/battery_style" />

    <RadioGroup
        android:id="@+id/battery_style_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_bar_battery_style_icon_portrait"
            android:id="@+id/battery_style_portrait_option"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_bar_battery_style_icon_landscape"
            android:id="@+id/battery_style_landscape_option"
            android:checked="true" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_bar_battery_style_circle"
            android:id="@+id/battery_style_circle_option"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_bar_battery_style_text"
            android:id="@+id/battery_style_text_option"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_bar_battery_style_hidden"
            android:id="@+id/battery_style_hidden_option"
            android:checked="false" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/urom_dialog_padding"
        android:paddingBottom="@dimen/urom_dialog_headlist_padding"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textColor="?android:attr/colorAccent"
        android:text="@string/status_bar_battery_percentage_title"
        android:id="@+id/battery_percentage" />

    <RadioGroup
        android:id="@+id/battery_percentage_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_bar_battery_percentage_default"
            android:id="@+id/battery_percentage_hidden_option"
            android:checked="false" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_bar_battery_percentage_text_inside"
            android:id="@+id/battery_percentage_inside_option"
            android:checked="true" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_bar_battery_percentage_text_next"
            android:id="@+id/battery_percentage_next_option"
            android:checked="false" />
    </RadioGroup>

</LinearLayout>
